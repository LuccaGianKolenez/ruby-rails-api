            },
            "url": {
              "raw": "{{base_url}}/auth/sign_in",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "auth",
                "sign_in"
              ]
            },
            "description": "Returns JWT token when credentials are valid."
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "try {",
                  "  const json = pm.response.json();",
                  "  pm.test('Returns token', function () {",
                  "    pm.expect(json).to.have.property('token');",
                  "  });",
                  "  pm.collectionVariables.set('jwt', json.token);",
                  "  pm.environment.set('jwt', json.token);",
                  "} catch(e) {",
                  "  console.warn('No JSON body or token');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "response": []
        }
      ]
